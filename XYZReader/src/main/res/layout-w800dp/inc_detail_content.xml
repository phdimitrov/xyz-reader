<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_article_detail">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/detail_card_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
            android:layout_marginStart="@dimen/detail_inner_horiz_margin"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/detail_inner_vert_margin"
            android:paddingTop="@dimen/detail_inner_vert_margin"
            android:scrollbarStyle="outsideOverlay" />

    </android.support.v7.widget.CardView>

</merge>